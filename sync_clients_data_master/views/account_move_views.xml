<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_move_form_inherit_sync_clients_data" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_td_label')]" position="replace">
                    <div class="o_td_label">
                        <label for="partner_id" string="Customer" style="font-weight:bold;" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                        <label for="partner_id" string="Customer" style="font-weight:bold;" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
